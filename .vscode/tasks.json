{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "dev",
			"group": "build",
			"label": "npm: dev:frontend",
			"detail": "Start Vite dev server",
			"cwd": "${workspaceFolder}/frontend",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": ".",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Local:.*",
					"endsPattern": ".*ready in.*"
				}
			}
		},
		{
			"type": "npm",
			"script": "dev",
			"group": "build",
			"label": "npm: dev:backend",
			"detail": "Start Backend dev server with nodemon",
			"cwd": "${workspaceFolder}/backend",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": ".",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Server running on port.*",
					"endsPattern": ".*Server running on port.*"
				}
			}
		}
	]
}

